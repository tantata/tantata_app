<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.tantata.showcase_app"
        version   = "1.0.0">
    <name>Tantata App</name>

    <description>
        Mobile App by Tantata Solutions
    </description>

    <author href="http://tantata.com" email="info@tantata.com">
        Tantata Team
    </author>

    <feature name="http://api.phonegap.com/1.0/device" />

    <preference name="phonegap-version" value="2.2.0" />
    <preference name="orientation"      value="default" />
    <preference name="target-device"    value="universal" />
    <preference name="fullscreen"       value="false" />

    <access origin="http://tantata.com" browserOnly="true" subdomains="true"/>
    
    <icon src="tantata.png" />
    <icon src="res/icon/tantata.png"   gap:platform="android"    gap:density="ldpi" />
    <icon src="res/icon/tantata.png"   gap:platform="android"    gap:density="mdpi" />
    <icon src="res/icon/tantata.png"   gap:platform="android"    gap:density="hdpi" />
    <icon src="res/icon/tantata.png"  gap:platform="android"    gap:density="xhdpi" />
    <icon src="res/icon/tantata.png"     gap:platform="blackberry" />
    <icon src="res/icon/tantata.png"     gap:platform="blackberry" gap:state="hover"/>
    <icon src="res/icon/tantata.png"            gap:platform="ios"        width="57" height="57" />
    <icon src="res/icon/tantata.png"            gap:platform="ios"        width="72" height="72" />
    <icon src="res/icon/tantata.png"         gap:platform="ios"        width="114" height="114" />
    <icon src="res/icon/tantata.png"         gap:platform="ios"        width="144" height="144" />
    <icon src="res/icon/tantata.png"          gap:platform="webos" />
    <icon src="res/icon/tantata.png"  gap:platform="winphone" />
    <icon src="res/icon/tantata.png" gap:platform="winphone"   gap:role="background" />

    <gap:splash src="res/screen/splash.png"  gap:platform="android" gap:density="ldpi" />
    <gap:splash src="res/screen/splash.png"  gap:platform="android" gap:density="mdpi" />
    <gap:splash src="res/screen/splash.png"  gap:platform="android" gap:density="hdpi" />
    <gap:splash src="res/screen/splash.png" gap:platform="android" gap:density="xhdpi" />
    <gap:splash src="res/screen/splash.png"         gap:platform="blackberry" />
    <gap:splash src="res/screen/splash.png"    gap:platform="ios"     width="320" height="480" />
    <gap:splash src="res/screen/splash.png" gap:platform="ios"     width="640" height="960" />
    <gap:splash src="res/screen/splash.png"      gap:platform="ios"     width="768" height="1024" />
    <gap:splash src="res/screen/splash.png"     gap:platform="ios"     width="1024" height="768" />
    <gap:splash src="res/screen/splash.png" gap:platform="winphone" />
</widget>
